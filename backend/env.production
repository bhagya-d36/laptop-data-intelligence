# Production Configuration
# Copy this file to .env.production and configure for your production environment

# DeepSeek API Configuration
DEEPSEEK_API_KEY=your_production_deepseek_api_key_here

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False

# Database Configuration (if using PostgreSQL in production)
# DATABASE_URL=postgresql://user:password@localhost:5432/laptop_intelligence

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# API Configuration
API_HOST=0.0.0.0
API_PORT=5000

# Security Configuration
SECRET_KEY=your_secret_key_here
JWT_SECRET_KEY=your_jwt_secret_key_here

# CORS Configuration
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/app/logs/app.log

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Cache Configuration
CACHE_TYPE=redis
CACHE_REDIS_URL=redis://redis:6379/1

# Monitoring Configuration
SENTRY_DSN=your_sentry_dsn_here

# Email Configuration (for notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password

# File Upload Configuration
MAX_CONTENT_LENGTH=16777216  # 16MB
UPLOAD_FOLDER=/app/uploads

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem
